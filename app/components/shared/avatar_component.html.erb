<div class="account-header flex items-center">
  <div class="avatar-container relative">
    <% if record.avatar&.attached? %>
      <%= image_tag(
            url_for(record.avatar.variant(resize_to_fill: [size, size])),
            class: "initialjs-avatar #{options[:class]}".strip,
            style: "width: #{size}px; height: #{size}px; border-radius: 50%; object-fit: cover;",
            alt: record.try(:username) || record.try(:name)
          ) %>

      <%= button_to "Ã—",
            delete_avatar_account_path,
            method: :delete,
            form: { class: "delete-avatar-form" },
            data: { confirm: "Are you sure?" },
            class: "avatar-delete-btn" %>
    <% else %>
      <%= avatar_image %>
    <% end %>
  </div>

  <h1 class="account-title ml-4"><%= t("account.show.title") %></h1>
</div>




<style>
    .account-header {
        display: flex;
        align-items: center; /* vertically center avatar and title */
    }

    .avatar-container {
        position: relative;
        width: 100px; /* same as avatar size */
        height: 100px;
    }

    .account-title {
        margin-left: 20px; /* spacing between avatar and text */
        font-size: 3rem;   /* adjust as needed */
        font-weight: bold;
    }

    .avatar-delete-btn {
        position: absolute;
        top: 2px; /* moved down from -6px to 2px */
        right: 2px;
        width: 20px;
        height: 20px;
        padding: 0;
        border-radius: 50%;
        background-color: rgba(196, 189, 189, 0.7);
        color: rgba(248, 97, 97, 0.9);
        font-weight: bold;
        font-size: 12px;
        line-height: 20px;
        text-align: center;
        cursor: pointer;
        border: none;
        box-shadow: 0 0 3px rgba(0,0,0,0.3);
    }


    .avatar-delete-btn:hover {
        background-color: darkred;
    }

    .delete-avatar-form {
        display: inline-block; /* keeps the form compact */
        margin: 0;
    }

</style>