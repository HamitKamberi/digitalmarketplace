<h1>New Event</h1>

<%= form_with(model: @event, local: true) do |f| %>
  <div>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.text_area :description, rows: 4 %>
  </div>

  <div>
    <%= f.datetime_local_field :start_time %>
  </div>

  <div>
    <%= f.datetime_local_field :end_time %>
  </div>

  <div>
    <%= f.submit "Create Event" %>
  </div>
<% end %>
