<%= back_link_to %>

<h1>Edit Event</h1>

<%= form_with(model: @event, local: true) do |f| %>
  <div>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.text_area :description, rows: 4 %>
  </div>

  <div>
    <%= f.datetime_local_field :start_time %>
  </div>

  <div>
    <%= f.datetime_local_field :end_time %>
  </div>

  <div style="display: flex; justify-content: space-between; align-items: center;">
    <%= f.submit "Update Event" %>
    <%= link_to event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, style: "color: #f44336; text-decoration: none; display: inline-flex; align-items: center; gap: 4px;" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="3 6 5 6 21 6"></polyline>
        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
        <line x1="10" y1="11" x2="10" y2="17"></line>
        <line x1="14" y1="11" x2="14" y2="17"></line>
      </svg>
      Delete Event
    <% end %>
  </div>
<% end %>
