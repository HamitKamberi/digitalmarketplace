<h1>Associated Partners</h1>

<div class="partner-list">
  <% @users.each do |user| %>
    <div class="partner-card">
      <div class="avatar">
        <!-- Replace with real image if available -->
        <%= image_tag("avatar.png", alt: user.name, class: "avatar-img") %>
      </div>
      <div class="details">
        <div class="name"><strong><%= user.name.presence || "No Name" %></strong></div>
        <div class="username"><%= user.username.presence || "" %></div>
        <div class="email"><%= user.email %></div>
        <% if user.official_position?%>
          <div class="official-position">Type : <strong><%= user.official_position.presence %></strong></div>
        <% end %>

      </div>
    </div>
  <% end %>
</div>


<style>
    .partner-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0 1rem;
    box-sizing: border-box;
    }

    .partner-card {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    width: 100%;
    }

    .avatar {
    flex-shrink: 0;
    }

    .avatar-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    }

    .details {
    margin-left: 1rem;
    display: flex;
    flex-direction: column;
    }

    .details .name {
    font-weight: bold;
    font-size: 1.5rem;
    }

    .details .username,
    .details .email {
    font-size: 0.9rem;
    color: #666;
    }

    .details .official-position {
      font-size: 0.9rem;
      color: #444;
      margin-top: 2px;
    }
</style>
