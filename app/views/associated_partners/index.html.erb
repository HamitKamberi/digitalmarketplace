<div class="container">
  <div class="title-search-wrapper">
    <h1 class="page-title">Associated Partners</h1>
    
    <!-- Search Bar -->
    <div class="search-form-header">
      <form method="get" action="<%= associated_partners_path %>" class="search-form">
        <div class="input-group">
          <label for="partners_search_text">
            <span class="show-for-sr">Search Partners</span>
            <input type="text" 
                   name="search" 
                   placeholder="Search by country..." 
                   class="input-group-field"
                   value="<%= @search_query %>"
                   id="partners_search_text">
          </label>
          <div class="input-group-button">
            <button type="submit" class="button" title="Search">
              <span class="show-for-sr">Search</span>
              <span class="icon-search"></span>
            </button>
          </div>
        </div>
        <% if @search_query.present? %>
          <div class="clear-search">
            <a href="<%= associated_partners_path %>" class="link">Clear search</a>
          </div>
        <% end %>
      </form>
    </div>
  </div>

  <% if @search_query.present? %>
    <div class="search-results-info">
      <p>
        Search results for: <strong><%= @search_query %></strong>
        <% total_results = @partners_by_country.values.flatten.length %>
        (<%= total_results %> <%= "result".pluralize(total_results) %> found)
      </p>
    </div>
  <% end %>

  <div class="partners-by-country">
    <% if @partners_by_country.empty? %>
      <div class="no-results">
        <p>No partners found matching your search.</p>
      </div>
    <% else %>
      <% @partners_by_country.each do |country, partners| %>
        <div class="country-section">
          <h2 class="country-title"><%= country %></h2>
          
          <div class="partners-grid">
            <% partners.each do |partner| %>
              <div class="partner-box">
                <div class="partner-logo">
                  <%= image_tag partner[:logo_url], alt: partner[:name], class: "logo-image" %>
                </div>
                <div class="partner-info">
                  <h3 class="partner-name"><%= partner[:name] %></h3>
                  <p class="partner-description"><%= partner[:description] %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<style>
