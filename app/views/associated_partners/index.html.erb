<h1 class="page-title">Associated Partners</h1>

<div class="partner-list">
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="partner-card">
        <div class="avatar">
          <% if user.avatar&.attached? %>
            <%= image_tag(
                  url_for(user.avatar.variant(resize_to_fill: [60, 60])),
                  style: "width: 60px; height: 60px; border-radius: 50%; object-fit: cover;",
                ) %>
          <% else %>
            <%= image_tag("avatar.png", alt: user.name, class: "avatar-img") %>
          <% end %>
        </div>
        <div class="details">
          <div class="name"><strong><%= user.name.presence || "No Name" %></strong>
            <% if user.role == "student" %>
              <small> (student) </small>
            <% end %>
          </div>
          
          <div class="username"><%= user.username.presence || "" %></div>
          <% if user_signed_in? %>
            <div class="email"><%= user.email %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

</div>


<style>
  .page-title {
      font-size: 2rem;
      text-align: left;
      margin: 1rem auto;
      padding: 0 1rem;
      word-wrap: break-word;
    }
    .partner-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0 1rem;
    box-sizing: border-box;
    }

    .partner-card {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    width: 100%;
    }

    .avatar {
    flex-shrink: 0;
    }

    .avatar-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    }

    .details {
    margin-left: 1rem;
    display: flex;
    flex-direction: column;
    }

    .details .name {
    font-weight: bold;
    font-size: 1.5rem;
    }

    .details .username,
    .details .email {
    font-size: 0.9rem;
    color: #666;
    }

    .details .official-position {
      font-size: 0.9rem;
      color: #444;
      margin-top: 2px;
    }
</style>
