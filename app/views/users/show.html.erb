<div class="activity row margin-top">
  <div class="small-12 column">

    <h2 class="inline-block">
      <%= render Shared::AvatarComponent.new(@user, size: 60) %>
      <%= @user.name %>
      <% if current_user&.administrator? %>
        <small><%= @user.email %></small>
      <% end %>
    </h2>
    <% if @user.description.present? %>
      <section class="user-description callout secondary radius margin-vertical">
        <h3><%= t("users.show.description") %></h3>
        <p><%= simple_format(@user.description) %></p>
      </section>
    <% end %>
    <%= render Users::PublicActivityComponent.new(@user) %>
  </div>
</div>


<style>
  .user-description {
      font-size: 1rem;
      background-color: #f9f9f9;
      padding: 1rem;
      border-left: 4px solid #ccc;
      margin-top: 1.5rem;
    }
</style>